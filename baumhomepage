  <script>
    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Category filter
    const cats = document.querySelectorAll('.cat');
    const cards = document.querySelectorAll('.card');
    cats.forEach(c => c.addEventListener('click', () => {
      cats.forEach(x => x.classList.remove('active'));
      c.classList.add('active');
      const sel = c.dataset.cat;
      cards.forEach(card => {
        const match = sel === 'all' || card.dataset.category === sel;
        card.style.display = match ? '' : 'none';
      })
    }))

    // DM modal
    const modal = document.getElementById('modal');
    document.getElementById('dmBtn').addEventListener('click', () => modal.style.display = 'flex');
    document.getElementById('closeModal').addEventListener('click', () => modal.style.display = 'none');
    modal.addEventListener('click', (e)=>{ if(e.target === modal) modal.style.display='none' });

    // B2B mailto submit
    const form = document.getElementById('b2bForm');
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const company = encodeURIComponent(document.getElementById('company').value.trim());
      const name = encodeURIComponent(document.getElementById('name').value.trim());
      const contact = encodeURIComponent(document.getElementById('contact').value.trim());
      const message = encodeURIComponent(document.getElementById('message').value.trim());
      const subject = `[B2B 문의] ${decodeURIComponent(company || '무기재')} / ${decodeURIComponent(name)}`;
      const body = `회사명: ${decodeURIComponent(company)}%0D%0A담당자: ${decodeURIComponent(name)}%0D%0A연락처: ${decodeURIComponent(contact)}%0D%0A%0D%0A문의내용:%0D%0A${decodeURIComponent(message)}`;
      const to = 'youremail@example.com'; // TODO: 실제 수신 메일로 교체
      window.location.href = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    })
  </script>
